<div class="container" data-controller="contacts" style="max-width: 700px;">
  <div>
    <p style="color: green"><%= notice %></p>
  </div>
  <div class="row mb-3">
    <div class="col-6">
      <h2>Contacts</h2>
    </div>
    <div class="col-6">
      <%= link_to "+ Add contact", new_contact_path, class: "btn btn-primary", style: 'float: right;' %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-12">
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1"><i class="bi bi-search"></i></span>
        <input type="text" class="form-control" placeholder="Search for contact by last name..." aria-label="Username" aria-describedby="basic-addon1" />
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12">
      <ul class="list-group">
        <% @contacts.each do |contact| %>
          <%= render contact %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row mt-3 mb-3">
    <div class="col-12 d-flex justify-content-center">
      <%= paginate @contacts, window: 1 %>
    </div>
  </div>
</div>